<p id="notice"><%= notice %></p>

<h1>Phone Calls</h1>
<p><%= link_to 'New Phone Call', new_phone_call_path, class: 'btn success' %></p>

<p style="margin-top:30px">
Filter: <%= link_to 'All', phone_calls_path %> | <%= link_to 'Ended', phone_calls_path(status: 'ended') %> | <%= link_to 'In progress', phone_calls_path(status: 'in_progress') %>
</p>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Phone number</th>
      <th>Agent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phone_calls.each do |phone_call| %>
      <%= content_tag :tr, id: dom_id(phone_call), class: 'phone-call-item' do %>
        <td><%= phone_call.status %></td>
        <td><%= phone_call.phone_number.nickname || phone_call.phone_number.number %></td>
        <td><%= phone_call.agent.name %></td>
        <td><%= link_to 'Show', phone_call %></td>
        <td><%= link_to 'Edit', edit_phone_call_path(phone_call) %></td>
        <td><%= link_to 'Destroy', phone_call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    <% end %>
  </tbody>
</table>
